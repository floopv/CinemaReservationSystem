@using CinemaReservationSystem.Models
@model IEnumerable<Movie>


<div class="container">
    <div class="row mb-3 align-items-center my-3">
        <div class="col-md-6">
            @* <div>@Context.Request.Cookies["LastAddedMovie"]</div> *@
            <h2 class="display-6">All Movies</h2>
        </div>
        <div class="col-md-6 text-md-end text-start mt-2 mt-md-0">
            @* <a href="/Admin/Movie/Create" class="btn btn-success">Create</a> *@
        </div>
    </div>

    <div class="row">
        <div class="col-12">

            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Img</th>
                        <th scope="col">Bio</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var movie in Model)
                    {
                        <tr>
                            <th scope="row">@movie.Id</th>
                            <td>@movie.Name</td>
                            <td>
                                <img src="~/Imgs/Movies/@movie.MainImg" width="100" />
                            </td>
                            <td>
                                @movie.Description
                            </td>
                            @if (User.IsInRole(ConstantData.Super_Admin_Role) || User.IsInRole(ConstantData.Admin_Role))
                            {
                                <td>
                                    <a href="/Admin/Movie/Update/@movie.Id" type="button" class="btn btn-warning">Edit</a>
                                    <a href="/Admin/Movie/Delete/@movie.Id" class="btn btn-danger btn-delete">Delete</a>
                                </td>
                            }
                            else
                            {
                                <td>
                                    N/A
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const deleteButtons = document.querySelectorAll(".btn-delete");

        deleteButtons.forEach(button => {
            button.addEventListener("click", function (e) {
                e.preventDefault(); // stop normal navigation

                const url = this.getAttribute("href");

                Swal.fire({
                    title: "Are you sure?",
                    text: "This action cannot be undone!",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#d33",
                    cancelButtonColor: "#3085d6",
                    confirmButtonText: "Yes, delete it!"
                }).then((result) => {
                    if (result.isConfirmed) {
                        Swal.fire({
                          title: "Deleted!",
                          text: "Your file has been deleted.",
                          icon: "success"
                        });

                        // Redirect to delete URL
                        window.location.href = url;
                    }
                });
            });
        });
    });
</script>

